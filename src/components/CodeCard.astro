---
export interface Props {
  post: any
}

const { post } = Astro.props
---

<a
  href={post.url}
  class="transition-all duration-75 ease-in-out h-full block relative top-0 hover:-top-2 shadow-lg hover:shadow-xl bg-white rounded-xl overflow-hidden"
  data-test="article-card"
>
  <img
    class="squiggle"
    src={post.frontmatter.hero}
    alt={post.frontmatter.title}
    width="360"
    height="192"
  />
  <div class="py-6 px-8">
    <h2 class="font-bold text-2xl leading-tight">
      {post.frontmatter.title}
    </h2>
    <div class="mt-2 flex flex-row items-center">
      {
        post.frontmatter.tags.map(tag => {
          return (
            <div class="mr-2 p-1 px-2 bg-cyan">
              <p class="text-s text-gray-600">{tag}</p>
            </div>
          )
        })
      }
    </div>
  </div>
</a>

<style>
  img {
    width: 100%;
    aspect-ratio: 15/7;
    object-fit: cover;
  }
</style>
